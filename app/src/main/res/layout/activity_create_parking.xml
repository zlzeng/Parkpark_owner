<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zz.parkpark_owner.CreateParkingActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#70b8e2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="創建車位"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20dp"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:onClick="onCreateParkingSaveClick" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="20dp"
            android:onClick="onCreateParkingBackClick" />

    </FrameLayout>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/photo"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="70dp"
        android:onClick="onCameraClick"
        android:id="@+id/camera"
        android:scaleType="fitXY" />

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="135dp"
        android:layout_gravity="center"
        android:background="@mipmap/setmenu"
        android:layout_marginTop="60dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/setaddress"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="10dp"
            android:onClick="onSetAddressClick"
            android:id="@+id/set_address" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/setprice"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="10dp"
            android:onClick="onSetPriceClick"
            android:id="@+id/set_price" />
    </FrameLayout>


</FrameLayout>
