<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zz.parkpark_owner.SetPriceActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#70b8e2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="設置價格"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20dp"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:onClick="onSaveClick" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="20dp"
            android:onClick="onBackClick" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="110dp"
        android:background="@mipmap/background_menu">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="時租"
            android:id="@+id/hour"
            android:layout_gravity="center_vertical|left"
            android:textColor="#70b8e2"
            android:textSize="31dp"
            android:layout_marginLeft="30dp"
            android:onClick="onSetPriceTypeClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日租"
            android:id="@+id/day"
            android:layout_gravity="center"
            android:textSize="31dp"
            android:onClick="onSetPriceTypeClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月租"
            android:id="@+id/month"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="30dp"
            android:textSize="31dp"
            android:onClick="onSetPriceTypeClick" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="時租價格"
        android:id="@+id/price"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="210dp"
        android:textSize="23dp"
        android:textColor="#70b8e2" />

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/inputprice"
        android:layout_marginTop="239dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="number"
            android:ems="10"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:background="@null"
            android:layout_marginLeft="5dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="80dp"
        android:textSize="23dp"
        android:textColor="#70b8e2"
        android:text="租用類型" />


</FrameLayout>
